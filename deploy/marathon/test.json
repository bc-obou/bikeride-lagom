{
  "id": "/bikeride",
  "apps": [
    {
      "volumes": null,
      "id": "/bikeride/app1",
      "cmd": "while true; do python $MESOS_SANDBOX/app1.py; sleep1; done",
      "instances": 2,
      "cpus": 0.25,
      "mem": 128,
      "disk": 0,
      "gpus": 0,
      "fetch": [
        {
          "uri": "https://raw.githubusercontent.com/joerg84/dcos-101/master/app1/app1.py"
        }
      ],
      "container": {
        "type" : "DOCKER",
        "docker": {
          "image": "mesosphere/dcos-101",
          "forcePullImage": false,
          "privileged": false,
          "network": "USER"
        }
      },
      "network:": {
        "networkmode": "container"
      }
    }
  ]
}