#FROM openjdk
FROM store/oracle/serverjre:8
MAINTAINER Fernando Hackbart<fhackbart@gmail.com>
EXPOSE 8000
EXPOSE 9000
RUN mkdir -p /u01 
RUN yum -y install git
RUN cd /u01 &&\
    git clone https://github.com/fernandohackbart/bikeride-lagom.git
RUN chmod 755 /u01/bikeride-lagom/sbt /u01/bikeride-lagom/sbt-dist/bin/sbt
WORKDIR /u01/bikeride-lagom
ENTRYPOINT /u01/bikeride-lagom/sbt runAll
